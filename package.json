{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "A simple starter for a Node.js server with TypeScript, Express, Mongoose, RXJS, Moment and TypeScript REST, enables hot reload with debug support for VSCode",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --inspect=9229 -- ./src/index.ts",
    "start": "npm run build && node ./dist/server.js",
    "build": "webpack --config webpack.config.js"
  },
  "author": "Kostyantin Petrov",
  "license": "GNU",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.119",
    "@types/mongoose": "^5.3.5",
    "ts-loader": "^5.3.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.12.0",
    "tslint-webpack-plugin": "^2.0.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "mongoose": "^5.4.1",
    "rxjs": "^6.3.3",
    "typescript-rest": "^1.8.1"
  }
}
